{% extends 'base.html.twig' %}

{% block title %}{{  'form.sign.in' | trans }}!{% endblock %}

{% block body_unconnected %}
    <div class=" row justify-content-md-center mt-4">
        <form class="col-4" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">{{  'form.sign.in' | trans }}</h1>
            <div class="mb-3">
                <label for="inputUsername">{{  'form.username' | trans }}</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
            </div>
            <div class="mb-3">
                <label for="inputPassword">{{  'form.password' | trans }}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>


            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-success" type="submit">
                {{  'form.sign.in' | trans }}
            </button>
        </form>
    </div>

{% endblock %}
